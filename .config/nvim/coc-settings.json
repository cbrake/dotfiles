{
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript"],
  "codeLens.enable": true
}                            
